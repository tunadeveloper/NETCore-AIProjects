@{
    ViewData["Title"] = "OCR Uygulaması";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div style="background: linear-gradient(135deg, #6f42c1, #d63384); min-height: 100vh; display: flex; justify-content: center; align-items: center; font-family: 'Segoe UI', sans-serif; padding: 20px;">

    <div class="card" style="width: 600px; height: 450px; border-radius: 1rem; padding: 2rem; background: #fff; box-shadow: 0 8px 25px rgba(0,0,0,0.2); display: flex; flex-direction: column; justify-content: flex-start; transition: transform 0.3s;">
        <div style="flex: 1; overflow-y: auto;">
            <h3 class="card-title mb-4 text-center" style="color: #6f42c1;">Resimden Metin Okuma</h3>

            <form asp-action="Index" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="imageFile" class="form-label fw-semibold">Resim Seçin</label>
                    <input class="form-control" type="file" id="imageFile" name="imageFile" accept="image/*" required style="border-radius: 0.5rem; padding: 0.5rem;">
                </div>
                <button type="submit" class="btn btn-primary w-100" style="background: linear-gradient(45deg, #6f42c1, #d63384); border: none; font-weight: bold; padding: 0.6rem;">Metni Oku</button>
            </form>

            @if (ViewBag.error != null)
            {
                <div class="alert alert-danger mt-3" style="border-radius: 0.5rem;">@ViewBag.error</div>
            }

            @if (ViewBag.description != null)
            {
                <div class="alert alert-success mt-3" style="border-radius: 0.5rem;">
                    <h5>Algılanan Metin:</h5>
                    <pre style="background: #f8f9fa; padding: 10px; border-radius: 0.5rem; overflow-x: auto;">@ViewBag.description</pre>
                </div>
            }

            <img id="preview-img" style="margin-top: 15px; max-height: 250px; width: 100%; object-fit: contain; border-radius: 0.5rem; border: 1px solid #ddd; display: none;" />
        </div>
    </div>
</div>

<script>
    const imageInput = document.getElementById('imageFile');
    const preview = document.getElementById('preview-img');

    imageInput.addEventListener('change', function(event) {
        const file = event.target.files[0];
        if (!file) {
            preview.style.display = 'none';
            preview.src = '';
            return;
        }
        preview.src = URL.createObjectURL(file);
        preview.style.display = 'block';
    });
</script>
