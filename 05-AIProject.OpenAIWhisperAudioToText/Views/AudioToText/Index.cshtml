@model string
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Audio → Text</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/stylesheet.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1>Ses Dosyasını Metne Çevir</h1>

        <form method="post" enctype="multipart/form-data" class="mb-4">
            <div class="mb-3">
                <label for="audioFile" class="form-label">Ses Dosyası Seçin (.mp3)</label>
                <input class="form-control" type="file" id="audioFile" name="audioFile" accept=".mp3" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Çevir</button>
        </form>

        @if (!string.IsNullOrEmpty(Model))
        {
            <h5>Metin Çıktısı:</h5>
            <div class="result-box">
                <textarea class="form-control" rows="6" readonly>@Model</textarea>
            </div>
        }

        @if (ViewBag.errorMessage != null)
        {
            <div class="error-box">
                <strong>@ViewBag.errorMessage</strong><br />
                <small>@ViewBag.errorDetails</small>
            </div>
        }
    </div>
</body>
</html>
