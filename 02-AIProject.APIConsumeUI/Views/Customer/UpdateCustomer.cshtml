@using _02_AIProject.APIConsumeUI.DTOs
@model GetByIdCustomerDto
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Müşteri Güncelle</h2>
    <form method="post" class="card p-4 shadow-sm bg-light rounded">
        <input type="hidden" asp-for="CustomerID" />
        <div class="mb-3">
            <label class="form-label">Müşteri Adı</label>
            <input type="text" asp-for="CustomerName" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Müşteri Soyadı</label>
            <input type="text" asp-for="CustomerSurname" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Müşteri Bakiyesi</label>
            <input type="number" asp-for="CustomerBalance" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">
            <i class="bi bi-pencil-square"></i> Güncelle
        </button>
    </form>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
