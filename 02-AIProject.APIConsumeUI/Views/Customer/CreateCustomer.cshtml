@using _02_AIProject.APIConsumeUI.DTOs
@model CreateCustomerDto
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Yeni Müşteri Oluştur</h2>
    <form method="post" class="card p-4 shadow-sm bg-light rounded">
        <div class="mb-3">
            <label class="form-label">Müşteri Adı</label>
            <input type="text" asp-for="CustomerName" class="form-control" placeholder="Ad girin" />
        </div>
        <div class="mb-3">
            <label class="form-label">Müşteri Soyadı</label>
            <input type="text" asp-for="CustomerSurname" class="form-control" placeholder="Soyad girin" />
        </div>
        <div class="mb-3">
            <label class="form-label">Müşteri Bakiyesi</label>
            <input type="number" asp-for="CustomerBalance" class="form-control" placeholder="Bakiye girin" />
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Müşteriyi Oluştur
        </button>
    </form>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
