@using _02_AIProject.APIConsumeUI.DTOs
@model List<ResultCustomerDto>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Müşteri Listesi</h2>
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Soyad</th>
                    <th>Bakiye</th>
                    <th colspan="2">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CustomerID</td>
                        <td>@item.CustomerName</td>
                        <td>@item.CustomerSurname</td>
                        <td>@item.CustomerBalance</td>
                        <td>
                            <a href="/Customer/UpdateCustomer/@item.CustomerID" class="btn btn-sm btn-success">
                                <i class="bi bi-pencil-square"></i> Güncelle
                            </a>
                        </td>
                        <td>
                            <a href="/Customer/DeleteCustomer/@item.CustomerID" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a href="/Customer/CreateCustomer" class="btn btn-primary mt-3">
        <i class="bi bi-plus-circle"></i> Yeni Müşteri Ekle
    </a>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
